<h1>Guests</h1>

<table>
  <thead>
    <tr>
      <th>Full name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Document ID</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= [guest.first_name, guest.last_name].compact.join(" ") %></td>
        <td><%= guest.email %></td>
        <td><%= guest.phone %></td>
        <td><%= guest.document_id %></td>
        <td><%= link_to "Show", guest_path(guest) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
