<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Type</th>
      <th>Price</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.number %></td>
        <td><%= room.room_type %></td>
        <td><%= number_to_currency(room.price) %></td>
        <td><%= room.status %></td>
        <td><%= link_to "Show", room_path(room) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
